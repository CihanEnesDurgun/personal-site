# ===== GÜVENLİK AYARLARI =====
# JWT Secret Key - En az 32 karakter olmalı
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters-long

# Bcrypt Salt Rounds - Şifre hashleme için
BCRYPT_SALT_ROUNDS=12

# Default Admin Password - İlk kurulum için (opsiyonel)
# Eğer belirtilmezse, güvenli rastgele şifre oluşturulur
# DEFAULT_ADMIN_PASSWORD=your-secure-password-here

# Session Timeout - Dakika cinsinden
SESSION_TIMEOUT=60

# Session Idle Timeout - Dakika cinsinden (hareketsizlik)
SESSION_IDLE_TIMEOUT=15

# Maximum concurrent sessions per user
MAX_SESSIONS_PER_USER=3

# Session cleanup interval - Dakika cinsinden
SESSION_CLEANUP_INTERVAL=5

# Rate Limiting - Dakika başına maksimum istek sayısı
RATE_LIMIT_MAX=100

# CORS Origin - Artık config.json dosyasından yönetiliyor
# config.json dosyasında "mode": "development" veya "mode": "production" olarak ayarlayın
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# ===== VERİTABANI AYARLARI =====
# Database URL (gelecekte kullanım için)
DATABASE_URL=sqlite:./data/database.db

# ===== LOGGING AYARLARI =====
# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log File Path
LOG_FILE=./logs/app.log

# ===== EMAIL AYARLARI =====
# SMTP Configuration (gelecekte kullanım için)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===== BACKUP AYARLARI =====
# Backup Directory
BACKUP_DIR=./backups

# Auto Backup Interval (hours)
BACKUP_INTERVAL=24

# ===== GELİŞTİRME AYARLARI =====
# Environment (development, production, test)
NODE_ENV=development

# Debug Mode
DEBUG=false

# Port
PORT=3000